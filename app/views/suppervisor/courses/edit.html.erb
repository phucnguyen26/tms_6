<% provide(:title, "Edit course") %>
<h1>Edit Course</h1>
<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= form_for([:suppervisor,@course]) do |f| %>
      <%= render "shared/error_course" %>
      <%= f.label :name %>
      <%= f.text_field :name, class: "form-control" %>
      <%= f.label :instruction %>
      <%= f.text_field :instruction, class: "form-control" %>
      <div class="span6">
        <%= f.label :subject %>
        <%= f.collection_check_boxes :subject_ids, Subject.all, :id, :name %>
      </div>
      <%= f.submit "Save Chance", class: "btn btn-primary" %>
    <% end %>
  </div>
</div>
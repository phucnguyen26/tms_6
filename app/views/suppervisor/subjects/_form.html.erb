<%= form_for([:suppervisor,@subject]) do |f| %>
  <%= render "shared/error_message", object: f.object %>
  <div class="form-group"><%= f.label :name %>
  <%= f.text_field :name, autofocus: true, class: "form-control" %></div>

  <div class="form-group">
    <p><%= f.fields_for :lessons do |lesson_fields| %>
      <%= render "lesson_fields", f: lesson_fields %>
    <% end %></p>
    <br/><p>
    <%= link_to_add_fields "Add Lessons", f, :lessons %></p>
  </div>

  <div><%= f.submit "Save", class: "btn btn-primary form-control" %></div>
<% end %>
